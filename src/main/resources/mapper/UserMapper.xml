<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.luoyuanxiang.thrivex.server.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="top.luoyuanxiang.thrivex.server.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="email" property="email" />
        <result column="avatar" property="avatar" />
        <result column="info" property="info" />
        <result column="role_id" property="roleId" />
        <result column="create_time" property="createTime" />
        <result column="permissionsCode" property="permissionsCode" />
        <association property="role" javaType="top.luoyuanxiang.thrivex.server.entity.Role">
            <id column="r_id" property="id" />
            <result column="r_name" property="name" />
            <result column="mark" property="mark" />
            <result column="description" property="description" />
        </association>
    </resultMap>
    <select id="findByUsername" resultMap="BaseResultMap">
        select u.*,
               r.id                              r_id,
               r.name                            r_name,
               mark,
               description,
               (if(r.mark = 'admin',
                   (select group_concat(rp.name separator ',') from permission rp),
                   ((select group_concat(p.name separator ',')
                     from role_permission rp
                              left join permission p on p.id = rp.permission_id
                     where rp.role_id = r.id)))) permissionsCode
        from user u
                 left join role r on u.role_id = r.id
        where u.username = #{username}
    </select>

</mapper>
